{
  "manifest_version": 3,
  "name": "SocialBlade Quick Access",
  "description": "Open SocialBlade profile of the current YouTube channel",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "host_permissions": [
    "https://www.youtube.com/*"
  ]
}